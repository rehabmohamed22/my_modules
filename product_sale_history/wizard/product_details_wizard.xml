<odoo>
    <record id="sale_order_line_wizard_form" model="ir.ui.view">
        <field name="name">Sale Order Line Wizard Form</field>
        <field name="model">sale.order.line.wizard</field>
        <field name="arch" type="xml">
            <form string="تفاصيل المنتج">
                <group>
                    <field name="order_id"/>
                    <field name="partner_id"/>
                    <field name="order_date"/>
                    <field name="product_id"/>
                    <field name="quantity"/>
                    <field name="price"/>
                </group>
                <footer>
                    <button string="إغلاق" class="oe_highlight" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
