<odoo>
  <record id="view_crm_lead_form_invoice_button" model="ir.ui.view">
    <field name="name">crm.lead.form.invoice.button</field>
    <field name="model">crm.lead</field>
    <field name="inherit_id" ref="crm.crm_lead_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//header" position="inside">
        <button name="action_print_student_invoice"
                string="طباعة فاتورة الطالب"
                type="object"
                class="btn btn-primary"
                icon="fa-print"/>
      </xpath>
    </field>
  </record>
</odoo>
