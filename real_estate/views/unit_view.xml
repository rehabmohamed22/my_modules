<odoo>
    <record id="view_unit_form" model="ir.ui.view">
        <field name="name">real.estate.unit.form</field>
        <field name="model">real.estate.unit</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="property_id"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_unit_tree" model="ir.ui.view">
        <field name="name">real.estate.unit.tree</field>
        <field name="model">real.estate.unit</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="property_id"/>
                <field name="status"/>
            </tree>
        </field>
    </record>
</odoo>
