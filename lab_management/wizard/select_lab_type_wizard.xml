<odoo>
    <record id="view_select_lab_type_wizard" model="ir.ui.view">
        <field name="name">select.lab.type.wizard.form</field>
        <field name="model">select.lab.type.wizard</field>
        <field name="arch" type="xml">
            <form string="Select Test Type">
                <group>
                    <field name="lab_type"/>
                </group>
                <footer>
                    <button string="Proceed" type="object" name="action_proceed" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_select_lab_type_wizard" model="ir.actions.act_window">
        <field name="name">Select Test Type</field>
        <field name="res_model">select.lab.type.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
